<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/resultField"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#ffffff"
            style="@style/ResultTextViewStyle"
            android:text="@string/string_textView" />

        <EditText
            android:id="@+id/exampleField"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#ffffff"
            style="@style/ExampleTextViewStyle"
            android:text="@string/example"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/lg"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_lg"
                />

            <Button
                android:id="@+id/sin"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_sin"
                />

            <Button
                android:id="@+id/power"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_power"
                />

            <Button
                android:id="@+id/sqrt"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_sqrt"
              />

            <Button
                android:id="@+id/persent"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_persent"/>

            <Button
                android:id="@+id/delete"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_delete"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/ln"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_ln"
                />

            <Button
                android:id="@+id/cos"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_cos"
                />

            <Button
                android:id="@+id/number_7"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_7"/>

            <Button
                android:id="@+id/number_8"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_8"/>

            <Button
                android:id="@+id/number_9"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_9"/>

            <Button
                android:id="@+id/division"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_division"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/pi"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_pi"
                />

            <Button
                android:id="@+id/tan"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_tan"
                />

            <Button
                android:id="@+id/number_4"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_4"/>

            <Button
                android:id="@+id/number_5"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_5"/>

            <Button
                android:id="@+id/number_6"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_6"/>

            <Button
                android:id="@+id/multiplication"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_multiplication"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/openSkob"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_openSkob"
                />

            <Button
                android:id="@+id/factorial"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_factorial" />

            <Button
                android:id="@+id/number_1"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_1"/>

            <Button
                android:id="@+id/number_2"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_2"/>

            <Button
                android:id="@+id/number_3"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_3" />

            <Button
                android:id="@+id/difference"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_difference"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/closeSkob"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_closeSkob"/>

            <Button
                android:id="@+id/exponentE"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_exponentE"
                />

            <Button
                android:id="@+id/point"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_point"/>

            <Button
                android:id="@+id/number_0"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_0"/>

            <Button
                android:id="@+id/result"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_result"/>

            <Button
                android:id="@+id/sum"
                style="@style/LandskapeButtonStyle"
                android:layout_weight="1"
                android:text="@string/string_sum"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>