<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGreen</item>
        <item name="colorPrimaryDark">@color/colorDarkBlue</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:textSize">35sp</item>
        <!-- <item name="android:textColor">#a7a7a7</item> -->
        <!-- <item name="android:textStyle">normal</item> -->
        <item name="android:fontFamily">Times New Roman</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@color/colorBlue</item>
        <item name="android:textColor">#ffffff</item>
        <!--<item name="android:layout_margin">1dp</item> -->
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="LandskapeButtonStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@color/colorBlue</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ExampleTextViewStyle">
        <item name="android:textSize">29sp</item>
        <item name="android:fontFamily">Times New Roman</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#535353</item>
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ResultTextViewStyle">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">Times New Roman</item>
        <item name="android:textColor">@color/colorDarkGreen</item>
        <item name="android:gravity">center|right</item>
        <item name="android:background">#ffffff</item>
    </style>

</resources>